<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Team20FinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SettingsTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowBackground">#40FFFFFF</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/cardview_dark_background</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="fontFamily">@font/press_start_2p</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>