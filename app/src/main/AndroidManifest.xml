<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.neu.madcourse.team20_finalproject">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Team20FinalProject"
        tools:targetApi="31">
        <activity
            android:name=".CharScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AbilityListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".TestDiceForGame"
            android:exported="false" />
        <activity
            android:name=".DiceForGame"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Achievements"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".DiceRolling"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreatePlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SkinActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>